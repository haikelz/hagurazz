{
  "name": "haikel.my.id",
  "version": "1.3.0",
  "private": true,
  "description": "Haikel's Website",
  "scripts": {
    "dev": "next dev",
    "export": "next export",
    "lint": "next lint",
    "prepare": "husky install",
    "commit": "cz",
    "format": "prettier . --write",
    "build": "next build",
    "buildwithsitemap": "next build && next-sitemap --config next-sitemap.config.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.14.0",
    "@vercel/og": "^0.5.0",
    "classix": "^2.1.24",
    "fast-fuzzy": "^1.12.0",
    "fast-glob": "^3.2.12",
    "gray-matter": "^4.0.3",
    "jotai": "^2.0.3",
    "next": "13.2.4",
    "next-auth": "^4.21.1",
    "next-mdx-remote": "^4.4.1",
    "next-seo": "^5.15.0",
    "next-sitemap": "^4.0.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-pretty-code": "^0.9.4",
    "rehype-slug": "^5.1.0",
    "shiki": "^0.14.1",
    "tailwind-merge": "^1.12.0",
    "yet-another-react-lightbox": "^3.4.0"
  },
  "devDependencies": {
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^4.12.0",
    "@swc-jotai/react-refresh": "^0.0.7",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "encoding": "^0.1.13",
    "eslint": "8.37.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "prisma": "^4.12.0",
    "tailwind-scrollbar": "^3.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "5.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.json --write"
    ]
  }
}
