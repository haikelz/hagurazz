{
  "name": "haikel",
  "author": "Haikel Ilham Hakim",
  "version": "1.5.0",
  "private": true,
  "license": "MIT",
  "description": "My personal Website",
  "homepage": "https://haikel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/haikelz/haikel/"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "dev": "next dev",
    "lint": "next lint",
    "format": "prettier . --write",
    "build": "next build",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "db:introspect": "drizzle-kit introspect:mysql",
    "db:generate": "drizzle-kit generate:mysql --schema=./src/lib/utils/db/schema.ts",
    "open": "cypress open",
    "test": "cypress run"
  },
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@hookform/resolvers": "^3.3.2",
    "@planetscale/database": "^1.11.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.41.0",
    "@trpc/react-query": "^10.41.0",
    "@trpc/server": "^10.41.0",
    "@unocss/reset": "^0.56.5",
    "@vercel/kv": "^0.2.3",
    "classix": "^2.1.35",
    "contentlayer": "^0.3.4",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.28.6",
    "fast-fuzzy": "^1.12.0",
    "jotai": "^2.4.3",
    "lucide-react": "^0.288.0",
    "next": "^13.5.6",
    "next-auth": "^4.24.3",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.2.1",
    "ofetch": "^1.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.47.0",
    "react-string-replace": "^1.1.1",
    "react-type-animation": "^3.2.0",
    "reading-time": "^1.5.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "tailwind-merge": "^1.14.0",
    "yet-another-react-lightbox": "^3.14.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "20.8.7",
    "@types/react": "18.2.30",
    "@types/rss": "^0.0.31",
    "@unocss/postcss": "^0.56.5",
    "commitizen": "^4.3.0",
    "cypress": "^13.3.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.52.0",
    "eslint-config-next": "^13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rehype-shikiji": "^0.6.10",
    "turbo": "^1.10.16",
    "typescript": "5.2.2",
    "unocss": "^0.56.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./prettier.config.js --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./prettier.config.js --write"
    ]
  }
}
