{
  "name": "haikel",
  "author": "Haikel Ilham Hakim",
  "version": "1.5.0",
  "private": true,
  "license": "MIT",
  "description": "My personal Website",
  "homepage": "https://haikel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/haikelz/haikel/"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "dev": "next dev",
    "lint": "next lint",
    "format": "prettier . --write",
    "build": "next build",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "db:introspect": "drizzle-kit introspect:mysql",
    "db:generate": "drizzle-kit generate:mysql --schema=./src/lib/utils/db/schema.ts",
    "open": "cypress open",
    "test": "cypress run"
  },
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@hookform/resolvers": "^3.3.0",
    "@planetscale/database": "^1.11.0",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@t3-oss/env-nextjs": "^0.6.1",
    "@tabler/icons-react": "^2.32.0",
    "@tanstack/react-query": "^4.33.0",
    "@trpc/client": "^10.38.1",
    "@trpc/react-query": "^10.38.1",
    "@trpc/server": "^10.38.1",
    "@vercel/kv": "^0.2.2",
    "classix": "^2.1.34",
    "contentlayer": "^0.3.4",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.28.6",
    "fast-fuzzy": "^1.12.0",
    "jotai": "^2.4.0",
    "next": "13.4.19",
    "next-auth": "^4.23.1",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.2.1",
    "ofetch": "^1.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.45.4",
    "react-string-replace": "^1.1.1",
    "reading-time": "^1.5.0",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "tailwind-merge": "^1.14.0",
    "yet-another-react-lightbox": "^3.12.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "20.5.6",
    "@types/react": "18.2.21",
    "@types/rss": "^0.0.30",
    "autoprefixer": "^10.4.15",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cypress": "^13.1.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.49.0",
    "eslint-config-next": "^13.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "7.28.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.28",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "rehype-shikiji": "^0.6.1",
    "tailwindcss": "^3.3.3",
    "typescript": "5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.json --write"
    ]
  }
}
