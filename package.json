{
  "name": "haikel",
  "author": "Haikel Ilham Hakim",
  "version": "1.5.0",
  "private": true,
  "license": "MIT",
  "description": "My personal Website",
  "homepage": "https://haikel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/haikelz/haikel/"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "dev": "next dev",
    "lint": "next lint",
    "format": "prettier . --write",
    "build": "next build",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "db:introspect": "drizzle-kit introspect:mysql",
    "db:generate": "drizzle-kit generate:mysql --schema=./src/lib/utils/db/schema.ts",
    "open": "cypress open",
    "test": "cypress run"
  },
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@hookform/resolvers": "^3.3.2",
    "@planetscale/database": "^1.11.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^5.0.5",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "@unocss/reset": "^0.57.3",
    "@vercel/kv": "^1.0.0",
    "classix": "^2.1.35",
    "contentlayer": "^0.3.4",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.29.0",
    "fast-fuzzy": "^1.12.0",
    "jotai": "^2.5.1",
    "lucide-react": "^0.292.0",
    "next": "^14.0.3",
    "next-auth": "^4.24.5",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.2.1",
    "ofetch": "^1.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.48.2",
    "react-string-replace": "^1.1.1",
    "reading-time": "^1.5.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "3.0.1",
    "rss": "^1.2.2",
    "tailwind-merge": "^2.0.0",
    "yet-another-react-lightbox": "^3.15.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/rss": "^0.0.32",
    "@unocss/postcss": "^0.57.3",
    "commitizen": "^4.3.0",
    "cypress": "^13.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.1",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rehype-shikiji": "^0.6.12",
    "typescript": "5.2.2",
    "unocss": "^0.57.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.json --write"
    ]
  }
}
