{
  "name": "haikel.my.id",
  "version": "1.5.0",
  "private": true,
  "license": "MIT",
  "description": "Haikel's Website",
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "prepare": "husky install",
    "commit": "cz",
    "format": "prettier . --write",
    "build": "pnpm prisma generate && next build",
    "buildwithsitemap": "next build && next-sitemap --config next-sitemap.config.js"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@supabase/supabase-js": "^2.26.0",
    "@upstash/claps": "1.0.0-beta.4",
    "@vercel/analytics": "^1.0.1",
    "classix": "^2.1.33",
    "date-fns": "^2.30.0",
    "fast-fuzzy": "^1.12.0",
    "fast-glob": "^3.2.12",
    "gray-matter": "^4.0.3",
    "jotai": "^2.2.1",
    "next": "13.4.7",
    "next-auth": "^4.22.1",
    "next-mdx-remote": "^4.4.1",
    "next-themes": "^0.2.1",
    "nextjs-toploader": "^1.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-pretty-code": "^0.9.11",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "shiki": "^0.14.2",
    "tailwind-merge": "^1.13.2",
    "yet-another-react-lightbox": "^3.11.2"
  },
  "devDependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^4.16.1",
    "@swc-jotai/react-refresh": "^0.0.8",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "encoding": "^0.1.13",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "^4.16.1",
    "tailwindcss": "^3.3.2",
    "typescript": "5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.json --write"
    ]
  }
}
