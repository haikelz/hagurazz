{
  "name": "haikel.my.id",
  "version": "1.1.0",
  "private": true,
  "description": "Haikel's Website",
  "scripts": {
    "dev": "next dev",
    "export": "next export",
    "lint": "next lint",
    "prepare": "husky install",
    "commit": "cz",
    "format": "prettier . --write",
    "sitemap": "next-sitemap --config next-sitemap.config.js",
    "build": "next build"
  },
  "dependencies": {
    "@next/env": "*",
    "@next/font": "^13.1.5",
    "glob": "^8.0.3",
    "gray-matter": "^4.0.3",
    "jotai": "^1.12.0",
    "next": "13.1.1",
    "next-mdx-remote": "^4.2.0",
    "next-seo": "^5.4.0",
    "next-sitemap": "^3.1.49",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.3.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-pretty-code": "^0.9.2",
    "rehype-slug": "^5.1.0",
    "shiki": "^0.13.0",
    "tailwind-merge": "^1.8.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.8",
    "@types/glob": "^8.0.0",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "autoprefixer": "^10.4.7",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.30.0",
    "eslint-config-next": "13.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.20",
    "prettier": "2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "sass": "^1.57.1",
    "tailwind-scrollbar": "^2.1.0",
    "tailwindcss": "^3.0.24",
    "typescript": "4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.json --write"
    ]
  }
}
