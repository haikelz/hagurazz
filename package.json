{
  "name": "haikel.my.id",
  "version": "1.2.0",
  "private": true,
  "description": "Haikel's Website",
  "scripts": {
    "dev": "next dev",
    "export": "next export",
    "lint": "next lint",
    "prepare": "husky install",
    "commit": "cz",
    "format": "prettier . --write",
    "sitemap": "next-sitemap --config next-sitemap.config.js",
    "build": "next build",
    "postbuild": "next build && next-sitemap --config next-sitemap.config.js"
  },
  "dependencies": {
    "@next/env": "*",
    "fast-fuzzy": "^1.12.0",
    "framer-motion": "^10.0.0",
    "glob": "^8.1.0",
    "gray-matter": "^4.0.3",
    "jotai": "^2.0.2",
    "next": "13.2.1",
    "next-mdx-remote": "^4.3.0",
    "next-seo": "^5.15.0",
    "next-sitemap": "^3.1.54",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.7.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-pretty-code": "^0.9.4",
    "rehype-slug": "^5.1.0",
    "shiki": "^0.14.1",
    "tailwind-merge": "^1.10.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@types/glob": "^8.1.0",
    "@types/node": "18.14.2",
    "@types/react": "18.0.28",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.35.0",
    "eslint-config-next": "13.2.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "postcss": "^8.4.21",
    "prettier": "2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "tailwind-scrollbar": "^2.1.0",
    "tailwindcss": "^3.2.7",
    "typescript": "4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.json --write"
    ]
  }
}
